{
    "include": [
        "src"
    ],
    "compilerOptions": {
        "downlevelIteration": true,
        "moduleResolution": "node",
        "target": "esnext",
        "module": "esnext",
        "lib": ["dom", "esnext"],
        "importHelpers": true,
        "declaration": true,
        "sourceMap": true,
        "rootDir": "src",
        "outDir": "lib/esm",
        "strict": true,
        "jsx": "react-jsx",
        "esModuleInterop": true,
        "skipLibCheck": true
    }
}